/*
Test cases for S319 Hurt

Tests verify all four physical elements that constitute hurt:
    1. Bodily pain
    2. Disease
    3. Infirmity (physical and psychological)
    4. Unconsciousness
*/

referencing s319_hurt/statute

scope testS319Hurt {

    // Test Case 1: Bodily pain caused -> Hurt
    HurtCase testBodilyPain := {
        accused := Party.Accused,
        victim := Party.Victim,
        action := "punching",
        physicalElement := PhysicalElement.BodilyPain,
        causedToVictim := TRUE,
        definition := ConsequenceDefinition.SaidToCauseHurt,
    }
    assert testBodilyPain.definition == ConsequenceDefinition.SaidToCauseHurt

    // Test Case 2: Disease caused -> Hurt
    HurtCase testDisease := {
        accused := Party.Accused,
        victim := Party.Victim,
        action := "infecting",
        physicalElement := PhysicalElement.Disease,
        causedToVictim := TRUE,
        definition := ConsequenceDefinition.SaidToCauseHurt,
    }
    assert testDisease.definition == ConsequenceDefinition.SaidToCauseHurt

    // Test Case 3: Infirmity caused -> Hurt
    HurtCase testInfirmity := {
        accused := Party.Accused,
        victim := Party.Victim,
        action := "injuring",
        physicalElement := PhysicalElement.Infirmity,
        causedToVictim := TRUE,
        definition := ConsequenceDefinition.SaidToCauseHurt,
    }
    assert testInfirmity.definition == ConsequenceDefinition.SaidToCauseHurt

    // Test Case 4: Unconsciousness caused -> Hurt
    HurtCase testUnconsciousness := {
        accused := Party.Accused,
        victim := Party.Victim,
        action := "drugging",
        physicalElement := PhysicalElement.Unconsciousness,
        causedToVictim := TRUE,
        definition := ConsequenceDefinition.SaidToCauseHurt,
    }
    assert testUnconsciousness.definition == ConsequenceDefinition.SaidToCauseHurt

    // Test Case 5: No physical element -> Not Hurt
    HurtCase testNoPhysicalElement := {
        accused := Party.Accused,
        victim := Party.Victim,
        action := "threatening",
        physicalElement := PhysicalElement.NA,
        causedToVictim := TRUE,
        definition := ConsequenceDefinition.NotSaidToCauseHurt,
    }
    assert testNoPhysicalElement.definition == ConsequenceDefinition.NotSaidToCauseHurt

    // Test Case 6: Physical element but not caused to victim -> Not Hurt
    HurtCase testNotCaused := {
        accused := Party.Accused,
        victim := Party.Victim,
        action := "attempting",
        physicalElement := PhysicalElement.BodilyPain,
        causedToVictim := FALSE,
        definition := ConsequenceDefinition.NotSaidToCauseHurt,
    }
    assert testNotCaused.definition == ConsequenceDefinition.NotSaidToCauseHurt

    // Test Case 7: Psychological infirmity -> Hurt
    InfirmityCase testPsychologicalInfirmity := {
        accused := Party.Accused,
        victim := Party.Victim,
        infirmityType := InfirmityType.Psychological,
        infirmityCaused := TRUE,
        definition := ConsequenceDefinition.SaidToCauseHurt,
    }
    assert testPsychologicalInfirmity.definition == ConsequenceDefinition.SaidToCauseHurt

    // Test Case 8: Minor bodily pain -> Hurt
    BodilyPainCase testMinorPain := {
        accused := Party.Accused,
        victim := Party.Victim,
        painType := BodilyPainType.Minor,
        affectedBodyPart := "arm",
        painCaused := TRUE,
        definition := ConsequenceDefinition.SaidToCauseHurt,
    }
    assert testMinorPain.definition == ConsequenceDefinition.SaidToCauseHurt

}
