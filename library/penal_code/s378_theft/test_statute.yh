/*
Test cases for S378 Theft

Tests verify all five elements required for theft:
    1. Movable property
    2. Dishonest intention (wrongful gain/loss)
    3. Without consent
    4. Out of possession of another
    5. Movement of property
*/

referencing s378_theft/statute

scope testS378Theft {

    // Test Case 1: All elements present -> Theft
    TheftCase testTheftComplete := {
        accused := Party.Accused,
        victim := Party.Victim,
        propertyType := PropertyType.Tangible,
        dishonestIntention := IntentionType.WrongfulGain,
        consent := ConsentStatus.WithoutConsent,
        possession := PossessionStatus.InPossessionOfAnother,
        movement := MovementStatus.PropertyMoved,
        definition := ConsequenceDefinition.CommitsTheft,
    }
    assert testTheftComplete.definition == ConsequenceDefinition.CommitsTheft

    // Test Case 2: Intangible property (e.g., virtual currency) -> Theft
    TheftCase testIntangibleProperty := {
        accused := Party.Accused,
        victim := Party.Victim,
        propertyType := PropertyType.Intangible,
        dishonestIntention := IntentionType.WrongfulGain,
        consent := ConsentStatus.WithoutConsent,
        possession := PossessionStatus.InPossessionOfAnother,
        movement := MovementStatus.PropertyMoved,
        definition := ConsequenceDefinition.CommitsTheft,
    }
    assert testIntangibleProperty.definition == ConsequenceDefinition.CommitsTheft

    // Test Case 3: No movable property -> Not Theft
    TheftCase testNoProperty := {
        accused := Party.Accused,
        victim := Party.Victim,
        propertyType := PropertyType.NA,
        dishonestIntention := IntentionType.WrongfulGain,
        consent := ConsentStatus.WithoutConsent,
        possession := PossessionStatus.InPossessionOfAnother,
        movement := MovementStatus.PropertyMoved,
        definition := ConsequenceDefinition.DoesNotCommitTheft,
    }
    assert testNoProperty.definition == ConsequenceDefinition.DoesNotCommitTheft

    // Test Case 4: No dishonest intention -> Not Theft
    TheftCase testNoDishonestIntention := {
        accused := Party.Accused,
        victim := Party.Victim,
        propertyType := PropertyType.Tangible,
        dishonestIntention := IntentionType.NA,
        consent := ConsentStatus.WithoutConsent,
        possession := PossessionStatus.InPossessionOfAnother,
        movement := MovementStatus.PropertyMoved,
        definition := ConsequenceDefinition.DoesNotCommitTheft,
    }
    assert testNoDishonestIntention.definition == ConsequenceDefinition.DoesNotCommitTheft

    // Test Case 5: With consent -> Not Theft
    TheftCase testWithConsent := {
        accused := Party.Accused,
        victim := Party.Victim,
        propertyType := PropertyType.Tangible,
        dishonestIntention := IntentionType.WrongfulGain,
        consent := ConsentStatus.WithConsent,
        possession := PossessionStatus.InPossessionOfAnother,
        movement := MovementStatus.PropertyMoved,
        definition := ConsequenceDefinition.DoesNotCommitTheft,
    }
    assert testWithConsent.definition == ConsequenceDefinition.DoesNotCommitTheft

    // Test Case 6: Property not in possession of another -> Not Theft
    TheftCase testNotInPossession := {
        accused := Party.Accused,
        victim := Party.Victim,
        propertyType := PropertyType.Tangible,
        dishonestIntention := IntentionType.WrongfulGain,
        consent := ConsentStatus.WithoutConsent,
        possession := PossessionStatus.NotInPossessionOfAnother,
        movement := MovementStatus.PropertyMoved,
        definition := ConsequenceDefinition.DoesNotCommitTheft,
    }
    assert testNotInPossession.definition == ConsequenceDefinition.DoesNotCommitTheft

    // Test Case 7: Property not moved -> Not Theft
    TheftCase testNoMovement := {
        accused := Party.Accused,
        victim := Party.Victim,
        propertyType := PropertyType.Tangible,
        dishonestIntention := IntentionType.WrongfulGain,
        consent := ConsentStatus.WithoutConsent,
        possession := PossessionStatus.InPossessionOfAnother,
        movement := MovementStatus.PropertyNotMoved,
        definition := ConsequenceDefinition.DoesNotCommitTheft,
    }
    assert testNoMovement.definition == ConsequenceDefinition.DoesNotCommitTheft

    // Test Case 8: Property severed from land -> Theft
    TheftCase testSeveredFromLand := {
        accused := Party.Accused,
        victim := Party.Victim,
        propertyType := PropertyType.SeveredFromLand,
        dishonestIntention := IntentionType.WrongfulLoss,
        consent := ConsentStatus.WithoutConsent,
        possession := PossessionStatus.InPossessionOfAnother,
        movement := MovementStatus.PropertyMoved,
        definition := ConsequenceDefinition.CommitsTheft,
    }
    assert testSeveredFromLand.definition == ConsequenceDefinition.CommitsTheft

}
