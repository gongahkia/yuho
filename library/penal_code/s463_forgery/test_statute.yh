/*
Test cases for S463 Forgery

Tests verify document-related offense elements:
    1. Document type (false document or part)
    2. Making act (creation/alteration/signing)
    3. Intent (damage/claim/property/contract/fraud)
    4. Target (public or specific person)
*/

referencing s463_forgery/statute

scope testS463Forgery {

    // Test Case 1: Full false document, intent to defraud -> Forgery
    ForgeryCase testFullDocumentFraud := {
        accused := Party.Accused,
        action := "making false document",
        documentType := DocumentType.FalseDocument,
        makingAct := MakingActType.CreatingEntireDocument,
        intent := IntentType.CommitFraud,
        target := TargetType.SpecificPerson,
        definition := ConsequenceDefinition.CommitsForgery,
    }
    assert testFullDocumentFraud.definition == ConsequenceDefinition.CommitsForgery

    // Test Case 2: Altered document, intent to support claim -> Forgery
    ForgeryCase testAlteredSupportClaim := {
        accused := Party.Accused,
        action := "making false document",
        documentType := DocumentType.FalseDocument,
        makingAct := MakingActType.AlteringExistingDocument,
        intent := IntentType.SupportClaimOrTitle,
        target := TargetType.NA,
        definition := ConsequenceDefinition.CommitsForgery,
    }
    assert testAlteredSupportClaim.definition == ConsequenceDefinition.CommitsForgery

    // Test Case 3: False signature, intent to cause damage to public -> Forgery
    ForgeryCase testFalseSignatureDamagePublic := {
        accused := Party.Accused,
        action := "making false document",
        documentType := DocumentType.PartOfDocument,
        makingAct := MakingActType.SigningFalsely,
        intent := IntentType.CauseDamageInjury,
        target := TargetType.Public,
        definition := ConsequenceDefinition.CommitsForgery,
    }
    assert testFalseSignatureDamagePublic.definition == ConsequenceDefinition.CommitsForgery

    // Test Case 4: Intent to cause person to part with property -> Forgery
    ForgeryCase testPartWithProperty := {
        accused := Party.Accused,
        action := "making false document",
        documentType := DocumentType.FalseDocument,
        makingAct := MakingActType.CreatingEntireDocument,
        intent := IntentType.CausePartWithProperty,
        target := TargetType.SpecificPerson,
        definition := ConsequenceDefinition.CommitsForgery,
    }
    assert testPartWithProperty.definition == ConsequenceDefinition.CommitsForgery

    // Test Case 5: Intent to cause enter contract -> Forgery
    ForgeryCase testEnterContract := {
        accused := Party.Accused,
        action := "making false document",
        documentType := DocumentType.FalseDocument,
        makingAct := MakingActType.AlteringExistingDocument,
        intent := IntentType.CauseEnterContract,
        target := TargetType.SpecificPerson,
        definition := ConsequenceDefinition.CommitsForgery,
    }
    assert testEnterContract.definition == ConsequenceDefinition.CommitsForgery

    // Test Case 6: No false document -> Not Forgery
    ForgeryCase testNoFalseDocument := {
        accused := Party.Accused,
        action := "making false document",
        documentType := DocumentType.NA,
        makingAct := MakingActType.CreatingEntireDocument,
        intent := IntentType.CommitFraud,
        target := TargetType.SpecificPerson,
        definition := ConsequenceDefinition.DoesNotCommitForgery,
    }
    assert testNoFalseDocument.definition == ConsequenceDefinition.DoesNotCommitForgery

    // Test Case 7: No making act -> Not Forgery
    ForgeryCase testNoMakingAct := {
        accused := Party.Accused,
        action := "making false document",
        documentType := DocumentType.FalseDocument,
        makingAct := MakingActType.NA,
        intent := IntentType.CommitFraud,
        target := TargetType.SpecificPerson,
        definition := ConsequenceDefinition.DoesNotCommitForgery,
    }
    assert testNoMakingAct.definition == ConsequenceDefinition.DoesNotCommitForgery

    // Test Case 8: No intent -> Not Forgery
    ForgeryCase testNoIntent := {
        accused := Party.Accused,
        action := "making false document",
        documentType := DocumentType.FalseDocument,
        makingAct := MakingActType.CreatingEntireDocument,
        intent := IntentType.NA,
        target := TargetType.SpecificPerson,
        definition := ConsequenceDefinition.DoesNotCommitForgery,
    }
    assert testNoIntent.definition == ConsequenceDefinition.DoesNotCommitForgery

    // Test Case 9: Intent to cause damage but no target -> Not Forgery
    ForgeryCase testDamageNoTarget := {
        accused := Party.Accused,
        action := "making false document",
        documentType := DocumentType.FalseDocument,
        makingAct := MakingActType.CreatingEntireDocument,
        intent := IntentType.CauseDamageInjury,
        target := TargetType.NA,
        definition := ConsequenceDefinition.DoesNotCommitForgery,
    }
    assert testDamageNoTarget.definition == ConsequenceDefinition.DoesNotCommitForgery

}
